@model Teacher

<div class="Container">

	<div class="text-danger">

		<p class="text-danger">@ViewData["Error"]</p>
	</div>

<form asp-action="DeleteTeacher">
	<fieldset>
		<div class="form-group">
			
			<input class="form-control" asp-for="TeacherId" hidden />
		</div>
		<div class="form-group">
			<label>
				Name
			</label>
			<input class="form-control" asp-for="TeacherName" disabled />
		</div>
		
		<button type="submit" class="btn btn-danger">Delete</button>


	</fieldset>
</form>