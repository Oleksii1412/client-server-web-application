@{
    var httpContext = ViewContext.HttpContext;
}

@if (httpContext.Session.GetString("token") != null)
{
    <div class="dropdown">
        <a class="btn btn-outline-primary p-3" asp-action="DashBoard" asp-controller="@httpContext.Session.GetString("Role")">
            @httpContext.Session.GetString("UserName")
        </a>
    </div>
    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout" method="post">
        <button id="logout-button" class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> Log out
        </button>
    </form>
}
else
{
    <div id="log-in-btn">
        <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i> Log in
        </a>
    </div>
    <div id="register-btn">
        <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i> Register
        </a>
    </div>
}

            